{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "bash"]
        },
        "install": {
          "cmds": ["pip install -r scripts/requirements.txt"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bash scripts/start_railway_services.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

